@model IEnumerable<ClassesScheduler.Models.ClassSchedule>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Classes Schedules</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SemestarSchedule.YearOfStudy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassromCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromHour)
        </th>
        <th>
