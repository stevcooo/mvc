            @Html.DisplayFor(modelItem => item.SemestarSchedule.YearOfStudy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassromCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromHour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToHour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeekDay)
        </td>
